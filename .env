# ============================ SAFETY / MASTER ================================
HARD_KILL=false
ODDS_API_ENABLED=true
SCAN_ENABLED=false            # cron OFF
AUTO_TELEGRAM=false           # auto-sends OFF (use &force=1 to push)
DIAG=true

# ============================== ODDS API ====================================
ODDS_API_KEY=<KEEP_YOURS>
ODDS_API_REGION=us,us2        # ensure us2 is included (your /health showed just "us")
BOOKS_WHITELIST=pinnacle,draftkings,betmgm,fanduel,caesars,bet365
ALERT_BOOKS=pinnacle,draftkings,betmgm,fanduel,caesars,bet365

# ============================== THRESHOLDS ==================================
LEAN_THRESHOLD=0.010          # 1.0% EV
STRONG_THRESHOLD=0.020        # 2.0% EV

# Outlier gates (price advantage in American “cents” vs market median)
OUTLIER_DOG_CENTS_LEAN=10     # was 12 — lets +11¢ dogs fire again
OUTLIER_DOG_CENTS_STRONG=18   # was 20
OUTLIER_FAV_CENTS_LEAN=7      # was 8  — lets +7¢ favs fire again
OUTLIER_FAV_CENTS_STRONG=12   # was 14

# ============================== CLAMPS ======================================
MANUAL_MAX_JOBS=1
MAX_JOBS_PER_SPORT=1
MAX_EVENTS_PER_CALL=1
RETRY_429_MAX=0
RATE_LIMIT_MS=1200

# ============================== MARKETS =====================================
