# ============================ SAFETY / MASTER ================================
HARD_KILL=false                # if true => 503 on all routes (disable to run tests)
ODDS_API_ENABLED=true          # provider ON for minimal live test
SCAN_ENABLED=false             # cron OFF (manual-only tests)
AUTO_TELEGRAM=true             # allow scan route to send when ?telegram=true

# Optional (not used by current code; harmless to keep)
MANUAL_SCANS_ALLOWED=true      # reserved toggle for manual endpoints
API_READ_KEY=dev-read-123      # reserved simple API key

DIAG=true                      # include alerts in JSON responses for debugging

# ============================== TELEGRAM ====================================
# ⚠️ Rotate your token with BotFather when going live.
TELEGRAM_BOT_TOKEN=REPLACE_ME
TELEGRAM_CHAT_ID=REPLACE_ME

# ============================ FETCHER FAN-OUT ===============================
# Regions to query (adds us2 for better book coverage)
ODDS_API_REGION=us,us2

# Books to request from provider (unavailable ones are ignored by Odds API)
BOOKS_WHITELIST=draftkings,betmgm,fanduel,caesars,bet365,espnbet,betrivers,pinnacle,williamhill_us,pointsbetus,wynnbet

# Which books to alert on (consensus still uses others). Use "*" to alert on any.
ALERT_BOOKS=*

# Lower thresholds to ensure first live alert fires; tighten later
LEAN_THRESHOLD=0.005          # 0.5%
STRONG_THRESHOLD=0.010        # 1.0%

# Limit events/books pulled per call (our code enforces events; books are filtered by whitelist)
MAX_EVENTS_PER_CALL=1
# MAX_BOOKS_PER_CALL=3        # (not used by current code)

# =========================== RATE LIMIT / RETRIES ===========================
RETRY_429_MAX=0
RATE_LIMIT_MS=1200            # 1.2s between calls (super conservative)

# ============================== MARKET TOGGLES ==============================
ENABLE_NFL_H2H=true
ENABLE_NFL_H1=false
ENABLE_MLB_H2H=false
ENABLE_MLB_F5_H2H=false
ENABLE_NCAAF_H2H=false
ENABLE_NCAAF_SPREADS=false
ENABLE_NCAAF_TOTALS=false

# ============================== MISC CLAMPS ================================
MANUAL_MAX_JOBS=1
MAX_JOBS_PER_SPORT=1
