# ============================ SAFETY / MASTER ================================
HARD_KILL=false
ODDS_API_ENABLED=true
SCAN_ENABLED=false            # cron still OFF
AUTO_TELEGRAM=false           # turn OFF auto-sending (we'll use &force=1 when needed)
DIAG=true

# ============================== ODDS API ====================================
ODDS_API_KEY=<KEEP_YOURS>
ODDS_API_REGION=us,us2
# Tighten the universe to books you actually bet/track
BOOKS_WHITELIST=pinnacle,draftkings,betmgm,fanduel,caesars,bet365
# Only alert if the price is at one of these books
ALERT_BOOKS=pinnacle,draftkings,betmgm,fanduel,caesars,bet365

# ============================== THRESHOLDS ==================================
# Back to “real” gates
LEAN_THRESHOLD=0.010          # 1.0%
STRONG_THRESHOLD=0.020        # 2.0%

# Outlier gates (price advantage in cents vs market median)
OUTLIER_DOG_CENTS_LEAN=12
OUTLIER_DOG_CENTS_STRONG=20
OUTLIER_FAV_CENTS_LEAN=8
OUTLIER_FAV_CENTS_STRONG=14

# ============================== CLAMPS ======================================
MANUAL_MAX_JOBS=1
MAX_JOBS_PER_SPORT=1
MAX_EVENTS_PER_CALL=1
RETRY_429_MAX=0
RATE_LIMIT_MS=1200

# ============================== MARKETS =====================================
ENABLE_NFL_H2H=true
ENABLE_NFL_H1=false
ENABLE_MLB_H2H=false
ENABLE_MLB_F5_H2H=false
ENABLE_NCAAF_H2H=false
ENABLE_NCAAF_SPREADS=false
ENABLE_NCAAF_TOTALS=false

# ============================== TELEGRAM ====================================
TELEGRAM_BOT_TOKEN=<KEEP_YOURS>
TELEGRAM_CHAT_ID=<KEEP_YOURS>
