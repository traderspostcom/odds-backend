# ===== SAFETY MASTER SWITCHES =====
HARD_KILL=true                 # 503 every request (we'll flip to false later)
ODDS_API_ENABLED=false         # provider OFF: wrapped fetchers return [] without calling API
MANUAL_SCANS_ALLOWED=false     # blocks non-dry manual endpoints
API_READ_KEY=dev-read-123      # simple key for /api/:sport/:market

# ===== FAN-OUT CLAMPS (fetcher-level) =====
# BOOKS_WHITELIST=pinnacle,circa,cris

# allow consensus from multiple books (region-safe; ignored if unavailable)
BOOKS_WHITELIST=pinnacle,draftkings,betmgm,fanduel,caesars,bet365,pointsbetus,espnbet,betrivers,wynnbet,williamhill_us

# only send alerts for these books (we'll use consensus from others)
ALERT_BOOKS=pinnacle

MAX_EVENTS_PER_CALL=20
MAX_BOOKS_PER_CALL=3

# ===== RETRY & PACING (super conservative) =====
RETRY_429_MAX=0
RATE_LIMIT_MS=1200

# ===== MARKET TOGGLES (start with NFL only) =====
ENABLE_MLB_H2H=false
ENABLE_MLB_F5_H2H=false
ENABLE_NFL_H2H=true
ENABLE_NFL_H1=false
ENABLE_NCAAF_H2H=false
ENABLE_NCAAF_SPREADS=false
ENABLE_NCAAF_TOTALS=false

# ===== CRON OFF =====
SCAN_ENABLED=false
AUTO_TELEGRAM=false

# ===== OPTIONAL DIAGNOSTICS =====
DIAG=true

# ===== TELEGRAM (rotate your token!) =====
TELEGRAM_BOT_TOKEN=REPLACE_ME
TELEGRAM_CHAT_ID=REPLACE_ME
