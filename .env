# ============================ SAFETY / MASTER ================================
HARD_KILL=false
ODDS_API_ENABLED=true
SCAN_ENABLED=false
AUTO_TELEGRAM=true
DIAG=true

# ============================== ODDS API ====================================
ODDS_API_KEY=<YOUR_REAL_ODDS_API_KEY>
ODDS_API_REGION=us,us2
BOOKS_WHITELIST=draftkings,betmgm,fanduel,caesars,bet365,espnbet,betrivers,pinnacle,williamhill_us,pointsbetus,wynnbet
ALERT_BOOKS=*

# ============================== THRESHOLDS ==================================
# temporarily easy to guarantee a first alert
LEAN_THRESHOLD=0.002           # 0.2%
STRONG_THRESHOLD=0.005         # 0.5%

# ============================== CLAMPS ======================================
MANUAL_MAX_JOBS=1
MAX_JOBS_PER_SPORT=1
MAX_EVENTS_PER_CALL=3          # allow up to 3 events per call
RETRY_429_MAX=0
RATE_LIMIT_MS=1200

# ============================== MARKETS =====================================
ENABLE_NFL_H2H=true
ENABLE_NFL_H1=false
ENABLE_MLB_H2H=false
ENABLE_MLB_F5_H2H=false
ENABLE_NCAAF_H2H=false
ENABLE_NCAAF_SPREADS=false
ENABLE_NCAAF_TOTALS=false

# ============================== TELEGRAM ====================================
TELEGRAM_BOT_TOKEN=<YOUR_REAL_BOT_TOKEN>
TELEGRAM_CHAT_ID=<YOUR_REAL_CHAT_ID>
