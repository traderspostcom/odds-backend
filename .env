# ============================ SAFETY / MASTER ================================
HARD_KILL=false
ODDS_API_ENABLED=true
SCAN_ENABLED=false
AUTO_TELEGRAM=false            # stays OFF (use &force=1 only when you want to push)
DIAG=true

# ============================== ODDS API ====================================
ODDS_API_KEY=<KEEP_YOURS>
ODDS_API_REGION=us,us2
BOOKS_WHITELIST=pinnacle,draftkings,betmgm,fanduel,caesars,bet365
ALERT_BOOKS=pinnacle,draftkings,betmgm,fanduel,caesars,bet365

# ============================== THRESHOLDS ==================================
LEAN_THRESHOLD=0.010
STRONG_THRESHOLD=0.020

# Outlier gates (price advantage in cents vs market median) — slightly easier
OUTLIER_DOG_CENTS_LEAN=10
OUTLIER_DOG_CENTS_STRONG=18
OUTLIER_FAV_CENTS_LEAN=7
OUTLIER_FAV_CENTS_STRONG=12

# ============================== CLAMPS ======================================
MANUAL_MAX_JOBS=1
MAX_JOBS_PER_SPORT=1
MAX_EVENTS_PER_CALL=3          # ← sample up to 3 events per call
RETRY_429_MAX=0
RATE_LIMIT_MS=1200

# ============================== MARKETS =====================================
ENABLE_NFL_H2H=true
ENABLE_NFL_H1=false
ENABLE_MLB_H2H=false
ENABLE_MLB_F5_H2H=false
ENABLE_NCAAF_H2H=false
ENABLE_NCAAF_SPREADS=false
ENABLE_NCAAF_TOTALS=false

# ============================== TELEGRAM ====================================
TELEGRAM_BOT_TOKEN=<KEEP_YOURS>
TELEGRAM_CHAT_ID=<KEEP_YOURS>
